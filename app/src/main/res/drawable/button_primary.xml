<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" /> <!-- Color mÃ¡s oscuro al presionar -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD" /> <!-- Color gris para deshabilitado -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F44336" /> <!-- Color rojo primario -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
